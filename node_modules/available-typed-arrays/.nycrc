{
  "coverageReporters": [
    { "type": "text-summary" },
    { "type": "text" },
    { "type": "html" },
    { "type": "json" }
  ],
  "exclude": [
    "coverage/",
    "test/"
  ],
  "files": [
    "**/*.js"
  ],
  "reporters": [
    "nyc"
  ],
  "testMatch": [
    "**/+(*.)+(spec|test).js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
